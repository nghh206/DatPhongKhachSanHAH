@{
    EntityStatus statusValue = Status;
}
@switch(statusValue)
{
    case EntityStatus.Active:
        <MudChip Color="Color.Success">Hoạt động</MudChip>
        break;
    case EntityStatus.InActive:
        <MudChip Color="Color.Default">Không hoạt động</MudChip>

        break;
    case EntityStatus.Pending:
        <MudChip Color="Color.Warning">Chờ</MudChip>

        break;
    case EntityStatus.PendingForConfirmation:
        <MudChip Color="Color.Secondary">Chờ xác nhận</MudChip>

        break;
        case EntityStatus.PendingForActivation:
        <MudChip Color="Color.Info">Chờ kích hoạt</MudChip>

        break;
    case EntityStatus.PendingForApproval:
        <MudChip Color="Color.Dark">Chờ chấp thuận</MudChip>

        break;
    case EntityStatus.Locked:
        <MudChip Color="Color.Error">Khóa</MudChip>

        break;
}
@code {
    [Parameter]
    public EntityStatus Status { get; set; }
    /*
     * /*
 * Active = 1,
    InActive = 2,
    Deleted = 3,
    Pending = 4,
    PendingForActivation = 5,
    PendingForConfirmation = 6,
    PendingForApproval = 7,
    Locked = 8,
 */
     
}
